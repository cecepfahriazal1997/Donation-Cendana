{% extends "backend/skeleton.twig" %}
{% block additional_title %}{{title}}{% endblock %}
{% block title_menu %}{{title}}{% endblock %}
{% block breadcrumb %}
<ol class="breadcrumb float-sm-right">
    <li class="breadcrumb-item"><a href="{{base_url()}}">Home</a></li>
    <li class="breadcrumb-item"><a href="{{base_url()}}backend/page/cardFamily">{{title}}</a></li>
    <li class="breadcrumb-item active">Form</li>
</ol>
{% endblock %}
{% block main_content %}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-right">
                <a class="btn btn-default" href="{{base_url()}}backend/page/cardFamily"><i class="fas fa-reply"></i>
                    Kembali</a>
            </div>
            <div class="col-md-12 mt-2">
                <!-- general form elements -->
                <div class="card card-outline card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Tambah Kartu Keluarga</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="number">Nomor Kartu Keluarga</label>
                                        <input type="text" class="form-control" id="number"
                                            placeholder="Masukan nomor kartu keluarga">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name">Nama Kepala Keluarga</label>
                                        <input type="text" class="form-control" id="name"
                                            placeholder="Masukan nama kepala keluarga">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="address">Alamat</label>
                                <textarea class="form-control" id="address" rows="6"
                                    placeholder="Masukan alamat lengkap"></textarea>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="rt">RT</label>
                                                <input type="text" class="form-control" id="rt"
                                                    placeholder="Masukan RT">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="rw">RW</label>
                                                <input type="text" class="form-control" id="rw"
                                                    placeholder="Masukan RW">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="postal_code">Kode Pos</label>
                                        <input type="text" class="form-control" id="postal_code"
                                            placeholder="Masukan nama kepala keluarga">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="province">Provinsi</label>
                                        <select class="form-control select2" name="province" style="width: 100%;">
                                            <option>Pilih Provinsi</option>
                                            <option>Jawa Barat</option>
                                            <option>Jawa Tengah</option>
                                            <option>Jawa Timur</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="city">Kabupaten / Kota</label>
                                        <select class="form-control select2" name="city" style="width: 100%;">
                                            <option>Pilih Kabupaten / Kota</option>
                                            <option>Bandung</option>
                                            <option>Cimahi</option>
                                            <option>Yogyakarta</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="district">Kecamatan</label>
                                        <select class="form-control select2" name="district" style="width: 100%;">
                                            <option>Pilih Kecamatan</option>
                                            <option>Cicendo</option>
                                            <option>Sukajadi</option>
                                            <option>Sukahaji</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="sub_district">Kelurahan</label>
                                        <input type="text" class="form-control" id="sub_district"
                                            placeholder="Masukan nama kelurahan">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer text-right">
                            <a href="{{base_url()}}backend/page/cardFamily" class="btn btn-default mr-2"><i class="fas fa-reply"></i> Kembali</a>
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Simpan</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block custom_js %}
<script>
    $(function () {
        //Initialize Select2 Elements
        $('.select2').select2()
    });
</script>
{% endblock %}